# Backend Configuration (copy to .env and customize)

# Audio storage directory
AUDIO_DIR=./audio

# Cache metadata file
CACHE_FILE=./cache.json

# Auto-delete MP3s older than N hours (0 = never delete)
CLEANUP_HOURS=24

# Enable verbose logging
DEBUG_MODE=False

# Server port
PORT=5000

# Server host (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
HOST=0.0.0.0
